<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" fillWidth="false" maxHeight="400.0" maxWidth="500.0" minHeight="400.0" minWidth="500.0" prefHeight="400.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.GeneratorController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <AnchorPane prefHeight="300.0" prefWidth="480.0" snapToPixel="false">
      <children>
         <Label layoutX="36.0" layoutY="18.0" text="Database: " />
          <TextField fx:id="dbNameField" layoutX="121.0" layoutY="14.0" minHeight="10.0" minWidth="50.0" prefHeight="25.0" prefWidth="200.0" promptText="Database name" />
         <Label layoutX="46.0" layoutY="47.0" text="Table: " />
          <TextField fx:id="tableNameField" layoutX="121.0" layoutY="43.0" minHeight="10.0" minWidth="50.0" prefHeight="25.0" prefWidth="200.0" promptText="Table name" />
         <TextField fx:id="batchSizeField" layoutX="121.0" layoutY="73.0" minHeight="10.0" minWidth="50.0" prefHeight="25.0" prefWidth="200.0" promptText="Batch size" />
         <Label layoutX="34.0" layoutY="77.0" text="Batch size: " />
           <Button layoutX="35.0" layoutY="109.0" onAction="#handleUpload" prefHeight="30.0" prefWidth="130.0" text="Upload CSV" />
         <Label fx:id="fileLabel" layoutX="181.0" layoutY="109.0" prefHeight="30.0" prefWidth="300.0" />
            <Button layoutX="35.0" layoutY="150.0" onAction="#handleChooseOutputDir" prefHeight="30.0" prefWidth="130.0" text="Select output dir" />
            <Label fx:id="outputDirLabel" layoutX="181.0" layoutY="150.0" prefHeight="30.0" prefWidth="300.0" />
          <HBox layoutX="79.0" layoutY="205.0" prefHeight="20.0" prefWidth="222.0">
              <children>
                  <CheckBox fx:id="checkTruncate" mnemonicParsing="false" text="Truncate" />
                  <RadioButton fx:id="appendRadio" mnemonicParsing="false" text="Append" />
                  <RadioButton fx:id="createRadio" mnemonicParsing="false" text="Create" />
              </children>
      
          </HBox>
          <Button layoutX="181.0" layoutY="260.0" onAction="#onGenButtonClick" prefHeight="30.0" prefWidth="130.0" text="Generate SQL code" />
      </children>
   </AnchorPane>
</VBox>
